<resources>

    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        <item name="android:windowBackground">@drawable/app_bg_repeat</item>
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleSize">0.0dip</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/bg_color_light_grey</item>
    </style>

    <style name="JustPushUpTextStyle">
        <item name="android:textColor">#ff6600</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TotalTextStyle">
        <item name="android:textColor">@color/text_red_color</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="CountTextStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="StartTextStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TwistTextStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShareTextStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailInfoTextStyle">
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SignInOutBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SignOutButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sign Out</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SignInOutBarBlurb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="MainDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="LeaderboardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_red_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_leaderboard_item</item>
    </style>

    <style name="PlayerItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DrawerListItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/selector_drawer_item</item>
    </style>
    <style name="DrawerListItemIconStyle">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AboutDetailStyle">
        <item name="android:textColor">@color/text_black_color</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
